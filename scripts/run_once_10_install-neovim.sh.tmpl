#!/bin/bash
set -euxo pipefail

if command -v nvim >/dev/null 2>&1 && nvim --version | grep -q "v0.11"; then
  echo "âœ”ï¸ Neovim v0.11+ already installed"
  exit 0
fi

echo "ðŸ“¦ Downloading latest Neovim AppImage from GitHub Actions..."

curl -fLo nvim.appimage https://github.com/neovim/neovim/releases/download/v0.11.0/nvim.appimage

chmod u+x nvim.appimage

echo "ðŸ“¦ Extracting AppImage to ~/.local/nvim"
./nvim.appimage --appimage-extract
rm nvim.appimage

mkdir -p ~/.local
mv squashfs-root ~/.local/nvim

mkdir -p ~/.local/bin
ln -sf ~/.local/nvim/AppRun ~/.local/bin/nvim

# Ensure PATH
if ! echo "$PATH" | grep -q "$HOME/.local/bin"; then
  echo 'export PATH="$HOME/.local/bin:$PATH"' >> ~/.profile
fi

export PATH="$HOME/.local/bin:$PATH"

echo "âœ… Installed: $(nvim --version | head -n 1)"

